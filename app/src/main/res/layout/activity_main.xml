<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/mainbackground"
    android:orientation="vertical"
    tools:context=".MainActivity">



    <EditText
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:id="@+id/phoneNumberEditText"
        android:background="@drawable/greybackground"
        android:hint="Enter phone number here"
        android:textStyle="bold"
        android:textSize="20dp"
        android:digits="0123456789"
        android:maxLength="10"
        android:inputType="phone">
    </EditText>

    <Button
        android:id="@+id/setDefaultDialerButton"
        android:layout_width="150dp"
        android:layout_height="55dp"
        android:layout_marginTop="100dp"
        android:background="@drawable/roundshape"
        android:text="Set Default Dialer"
        android:layout_gravity="center"/>

    <ImageButton
        android:id="@+id/button3"
        android:layout_width="150dp"
        android:layout_marginTop="100dp"
        android:layout_height="50dp"
        android:layout_marginLeft="15dp"
        android:contentDescription="Call Log Button"
        android:src="@drawable/baseline_access_time_24"
        android:background="@drawable/roundshape" />



    <ImageButton
        android:id="@+id/button4"
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:src="@drawable/baseline_person_24"
        android:background="@drawable/roundshape"
        android:contentDescription="Contacts Button"
        android:layout_marginTop="-50dp"
        android:layout_marginLeft="200dp" />



    <ImageButton
        android:id="@+id/callbutton"
        android:layout_width="150dp"
        android:layout_marginTop="90dp"
        android:layout_height="50dp"
        android:layout_gravity="center"
        android:contentDescription="Call Log Button"
        android:src="@drawable/baseline_call_24"
        android:background="@drawable/forcallbutton" />





</LinearLayout>